#set($custom_js = "<script type='text/javascript' src='/js/repair.js'></script>")
<div class="mui-content">
    <form id="repairForm" class="mui-input-group">
        <div class="mui-row">
            <h4 style="text-align: center">长广户户通</h4>
            <h4 style="text-align: center">客户故障网络报修</h4>
        </div>
        <div class="mui-input-row">
            <input type="text" name="userName" class="mui-input-clear" placeholder="姓名">
        </div>
        <div class="mui-input-row">
            <input type="text" name="address" class="mui-input-clear" placeholder="地址">
        </div>
        <div class="mui-input-row">
            <input type="text" name="phone" class="mui-input-clear" placeholder="联系电话">
        </div>
        <div style="height: auto" class="mui-input-row">
            <textarea name="description" class="mui-input-clear" rows="3" placeholder="故障现象"></textarea>
        </div>
        <div class="mui-button-row">
            <button type="button" id="submit" class="mui-btn mui-btn-primary">提交</button>
            <button type="button" id="cancel" class="mui-btn mui-btn-danger">取消</button>
        </div>
    </form>
</div>